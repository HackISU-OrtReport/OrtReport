<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/trackerdatacollectionpageslider_activity"
    tools:context=".TrackerActivity">

    <TextView
            android:text="0%"
            android:layout_width="140dp"
            android:layout_height="55dp" android:id="@+id/ortReporter"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white" android:textSize="30sp"
            android:fontFamily="monospace" android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:autoText="false"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.436" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="SUBMIT"
            android:layout_width="140sp"
            android:layout_height="55sp"
            android:id="@+id/submitButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textSize="30sp" android:onClick="lockInData"
            app:layout_constraintHorizontal_bias="0.0" android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white" android:fontFamily="monospace" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.561"/>
    <ImageView
            android:layout_width="143dp"
            android:layout_height="366dp" app:srcCompat="@drawable/trashcan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView2"
            app:layout_constraintVertical_bias="0.496" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.773"
            android:contentDescription="trash"/>
    <SeekBar
            android:layout_width="400dp"
            android:layout_height="110dp"
            android:rotation="270"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/simpleSeekBar"
            android:thumb="@drawable/recycle"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/custom_seekbar"
            app:layout_constraintVertical_bias="0.498"/>
    <TextView
            android:text="What percentage of your total meal did you waste?"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2" android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>